@page
@model _225E2_4_TP1_Razor.Pages.CadastrarEvento

@{
    ViewData["Title"] = "Cadastrar Evento";
}

<div class="container mt-5">
    <h2>@ViewData["Title"]</h2>
    
    <form method="post" class="mt-4">
        <div class="form-group">
            <label asp-for="Evento.Title" class="control-label"></label>
            <input asp-for="Evento.Title" class="form-control" />
        </div>

        <div class="form-group mt-3">
            <label asp-for="Evento.Date" class="control-label"></label>
            <input asp-for="Evento.Date" type="datetime-local" class="form-control" />
        </div>

        <div class="form-group mt-3">
            <label asp-for="Evento.Location" class="control-label"></label>
            <input asp-for="Evento.Location" class="form-control" />
        </div>

        <div class="form-group mt-4">
            <button type="submit" class="btn btn-primary">Cadastrar</button>
            <a href="/" class="btn btn-secondary">Voltar</a>
        </div>
    </form>

    @if (!string.IsNullOrEmpty(Model.Mensagem))
    {
        <div class="alert alert-success">@Model.Mensagem</div>
    }
</div>