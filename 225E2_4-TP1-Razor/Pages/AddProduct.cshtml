@page
@model _225E2_4_TP1_Razor.Pages.AddProduct

@{
    ViewData["Title"] = "Adicionar Produto";
}

<!-- EXERCICIO 10 -->

<div class="container mt-5">
    <h2>@ViewData["Title"]</h2>

    <form method="post" class="mt-4">
        <div class="form-group">
            <label asp-for="Produto.Name" class="control-label"></label>
            <input asp-for="Produto.Name" class="form-control" />
        </div>

        <div class="form-group mt-3">
            <label asp-for="Produto.Price" class="control-label"></label>
            <input asp-for="Produto.Price" class="form-control" />
        </div>

        <div class="form-group mt-4">
            <button type="submit" class="btn btn-primary">Cadastrar</button>
            <a href="/" class="btn btn-secondary">Voltar</a>
        </div>


        @if (!string.IsNullOrEmpty(Model.Mensagem))
        {
            <div class="alert alert-success">@Model.Mensagem</div>
        }
    </form>
</div>
